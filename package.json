{
  "name": "ref-napi",
  "description": "Turn Buffer instances into \"pointers\"",
  "engines": {
    "node": ">= 6.0"
  },
  "keywords": [
    "native",
    "buffer",
    "extensions",
    "c++",
    "pointer",
    "reference",
    "dereference",
    "type",
    "int",
    "long",
    "float",
    "double",
    "byte",
    "64",
    "napi"
  ],
  "version": "1.5.2",
  "license": "MIT",
  "author": "Anna Henningsen <anna@addaleax.net>",
  "repository": {
    "type": "git",
    "url": "git://github.com/node-ffi-napi/ref-napi.git"
  },
  "main": "./lib/ref.js",
  "scripts": {
    "docs": "node docs/compile",
    "test": "nyc mocha -gc",
    "install": "node-gyp-build",
    "prebuild": "prebuildify --napi",
    "prepack": "prebuildify-ci download && ([ $(ls prebuilds | wc -l) = '4' ] || (echo 'Some prebuilds are missing'; exit 1))"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "node-addon-api": "^2.0.0",
    "node-gyp-build": "^4.2.1"
  },
  "devDependencies": {
    "dox": "0.9.0",
    "highlight.js": "^9.12.0",
    "jade": "^1.11.0",
    "marked": "^0.7.0",
    "mocha": "^5.0.0",
    "nyc": "^15.0.0",
    "prebuildify": "^3.0.4",
    "prebuildify-ci": "^1.0.5",
    "weak-napi": "1"
  }
}
